<%- include ("./partials/_header") %>

<div class="container">
  <a href ="/newPost"><button type="button" class="btn btn-primary">Create New Post</button></a>
</div>

<main role="main" class="container">
  <div class="row">
    <div class="col-md-8 blog-main">
      
      <% if (posts.length == 0) { %>
      <h1>There are no posts</h1>
      <% } else { %>
        <% const months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]; %>
        <% for (var i = 0; i < posts.length; i++) { %>
          <div class="blog-post">
            <h2 class="blog-post-title"><%= posts[i].title %></h2>
            <p class="blog-post-meta"><%= months[posts[i].post_date.getMonth()] %> <%= posts[i].post_date.getDate() %>, <%= posts[i].post_date.getFullYear() %> by <a href="#"><%= posts[i].author %></a>     </p>
            <p><%= posts[i].post_data %></p>
            <a class = "btn btn-danger" href ="/delete/<%= posts[i]._id %>"> Delete </a>
            <a class = "btn btn-info" href ="/edit/<%= posts[i]._id %>"> Edit </a>
          </div>
        <% } %>
      <% } %>

    </div>
  </div>
</main>

<%- include ("./partials/_footer") %>
